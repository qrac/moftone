//----------------------------------------------------
//- Page: Index
//----------------------------------------------------
extends base/_layout.pug

block vars
  include base/_config.pug
  - var key = "index"
  - var page = pages[key]

block contents

  header.section.is-header.is-center
    .inner
      h1.heading.is-title.is-light #{page.title}
      h2.texts.is-light #{page.desc}
      p.text.is-light.is-strong
        | #{github.ver}
      p.texts.is-light
        i.fa.fa-github(aria-hidden="true")
        a.text.is-link-reverse(href=github.url+"/"+github.id+"/"+github.repo)
          span.text Repository
        | &nbsp;/&nbsp;
        a.text.is-link-reverse(href=github.url+"/"+github.id+"/"+github.repo+"/releases")
          span.text Releases
      .btns.is-center.is-lg
        a.btn.is-ghost.is-round(href="#download")
          i.fa.fa-paint-brush(aria-hidden="true")
          span.text Swatches Download
          i.fa.fa-angle-down(aria-hidden="true")

  main.section.is-main
    .group
      .grid.is-center
        each val in color
          .col.is-mobile-auto
            .pallet(class="is-" + val.id ontouchstart="")
              .bar.is-cut
                h3.texts.is-color-name= val.name
                .group.is-color-data
                  .grid.is-between
                    .col
                      p.texts.is-shade 500
                    .col
                      p.texts.is-hex
              case val.amount
                when 14
                  each num in ["50", "100", "200", "300", "400", "500", "600", "700", "800", "900", "A100", "A200", "A400", "A700"]
                    .bar
                      .group.is-color-data
                        .grid.is-between
                          .col
                            p.texts.is-shade= num
                          .col
                            p.texts.is-hex
                when 10
                  each num in ["50", "100", "200", "300", "400", "500", "600", "700", "800", "900"]
                    .bar
                      .group.is-color-data
                        .grid.is-between
                          .col
                            p.texts.is-shade= num
                          .col
                            p.texts.is-hex
        .col.is-mobile-auto
          .pallet.is-black-and-white
            each bw in ["black", "white"]
              .bar
                .group.is-color-data
                  .grid.is-between
                    .col
                      p.texts.is-shade= bw
                    .col
                      p.texts.is-hex

  section.section.is-dist#download
    .inner
      h2.heading.is-light.is-strong.is-center.is-title
        span.text.is-xs Download
      .group.is-scroll-x
        table.table.is-border.is-center.is-middle.is-light.is-transdark.is-sm
          thead
            tr.box.is-strong
              th(width="8")
              th Illustrator
              th Photoshop
              th Sketch
              th Keynote / Pages / Numbers
          tbody
            tr
              td Swatches
              td
                .btns.is-center
                  a.btn.is-plain.is-success(href="dist/swatches-moftone.ase" download="swatches-moftone.ase")
                    i.fa.fa-download(aria-hidden="true")
                    span.text Download
              td
                .btns.is-center
                  a.btn.is-plain.is-success(href="dist/swatches-moftone.ase" download="swatches-moftone.ase")
                    i.fa.fa-download(aria-hidden="true")
                    span.text Download
              td
                .btns.is-center
                  a.btn.is-plain.is-success(href="dist/swatches-moftone.clr" download="swatches-moftone.clr")
                    i.fa.fa-download(aria-hidden="true")
                    span.text Download
              td
                .btns.is-center
                  a.btn.is-plain.is-success(href="dist/swatches-moftone.clr" download="swatches-moftone.clr")
                    i.fa.fa-download(aria-hidden="true")
                    span.text Download
            tr
              td Template
              td
                .btns.is-center
                  a.btn.is-plain.is-success(href="dist/template-moftone.ai" download="template-moftone.ai")
                    i.fa.fa-download(aria-hidden="true")
                    span.text Download
              td ---
              td ---
              td ---

  footer.section.is-footer
    .inner
      .group
        .grid.is-center
          .col
            p.text.is-sm.is-light
              | License:&nbsp;&nbsp;
              i.fa.fa-balance-scale(aria-hidden="true")
              span.text #{github.license}
          .col
            p.text.is-sm.is-light
              | Author:&nbsp;&nbsp;
              i.fa.fa-twitter(aria-hidden="true")
              a.text.is-link-reverse(href=twitter.url+"/"+twitter.id target="_blank") Qrac