//----------------------------------------------------
//- Base: Head
//----------------------------------------------------

meta(charset="UTF-8")
title #{page.title} - #{site.title}
meta(name="description" content=page.desc)
meta(name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no, viewport-fit=cover")
meta(name="format-detection" content="telephone=no, email=no, address=no")
meta(http-equiv="x-ua-compatible" content="ie=edge")

//----------------------------------------------------
//- / facebook
//----------------------------------------------------

meta(property="og:title" content=page.title)
meta(property="og:description" content=page.desc)
meta(property="og:url" content=site.url+"/"+page.url)
meta(property="og:image" content=site.url+"/"+path.img+"/"+page.ogp)
meta(property="og:site_name" content=site.title)
meta(property="og:type" content="website")

//----------------------------------------------------
//- / Twitter
//----------------------------------------------------

meta(name="twitter:card" content="summary_large_image")
meta(name="twitter:creator" content=twitter.id)

//----------------------------------------------------
//- / Icon
//----------------------------------------------------

link(rel="apple-touch-icon" href=path.img+"/apple-touch-icon.png")
link(rel="shortcut icon" href=path.img+"/favicon.png")

//----------------------------------------------------
//- / CDN - Font Awesome
//----------------------------------------------------

link(rel="stylesheet" href="https://use.fontawesome.com/releases/v5.0.1/css/all.css")

//----------------------------------------------------
//- / CDN - Google Fonts
//----------------------------------------------------

link(rel="stylesheet" href="https://fonts.googleapis.com/css?family=Baloo+Da")

//----------------------------------------------------
//- / CDN - MUSUBii
//----------------------------------------------------

link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/musubii@5.1.0/docs/css/musubii.min.css")

//----------------------------------------------------
//- / Local - CSS
//----------------------------------------------------

link(rel="stylesheet" href=path.css+"/style.min.css")